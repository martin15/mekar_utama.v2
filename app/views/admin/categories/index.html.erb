<section class="admin-section-content">
  <div class="container">
    <div class="row">
      <div class="col-12 header-n-breadcrumb">
        <div class="row">
          <div class="col-12 col-md-6">
            <h2>PRODUCTS<%#= "#{@category.name.titleize} - #{@brand.name.titleize}" %></h2>
          </div>
          <div class="col-12 col-md-6 align-self-center">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
                <li class="breadcrumb-item active" aria-current="page">Categories</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
      <div class="col-sm-12 admin-categories">
        <%= render :partial => "shared/flash" %>
        <p><%= link_to "Add new category", new_admin_category_path, class: "btn btn-primary" %></p>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Parent</th>
              <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each_with_index do |category, x| %>
              <tr>
                <th scope="row"><%= @no+x+1 %></th>
                <td><%= category.name %></td>
                <td><%= category.parent_category_name %></td>
                <td>
                  <%= link_to "Edit", edit_admin_category_path(category.id, :page => params[:page]), :class => "btn btn-success" %>
                  <%= link_to "Delete", admin_category_path(category.id, :category => {:page => params[:page]} ), :method => :delete,
                                        data: {:confirm => "Are you sure?"}, :class => "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="col-xs-12 pagination justify-content-center"><%= paginate @categories %></div>
      </div>
    </div>
  </div>
</section>
