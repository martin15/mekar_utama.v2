<section class="admin-section-content">
  <div class="container">
    <div class="row">
      <div class="col-12 header-n-breadcrumb">
        <div class="row">
          <div class="col-12 col-md-6">
            <h2>Edit Product</h2>
          </div>
          <div class="col-12 col-md-6 align-self-center">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
                <li class="breadcrumb-item"><%= link_to "Products", admin_products_path %></li>
                <li class="breadcrumb-item active" aria-current="page">Edit</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
      <div class="col-sm-12 admin-products">
        <%= render :partial => "shared/flash" %>
        <%= render :partial => 'form' %>
      </div>
    </div>
  </div>
</section>
<%
=begin%>
 

<div class="admin-inner-content">
  <div class="admin-inner-content-title">Edit Product</div>
  <div class="admin-inner-content-info">
    <%= raw msg_flash(flash) %>
    <%= form_for([:admin, @product],
                  :html => { :multipart => true, :method => :put }) do |f| %>
      <%= f.error_messages %>
      <div style="height: 225px;">
        <%#= image_tag @product.primary_image("medium") %>
        <%= image_tag @product.image.url("medium") %>
      </div><br /><br />
      <%= render :partial => 'form', :locals => { :f => f} %>
      <div class="field">
        <%= f.submit 'Update Product' %>&nbsp;&nbsp;
        <%= link_to 'Back', admin_products_path %>
      </div>
    <% end %>
    <div class="clear"></div>
  </div>
</div> 
<%
=end%>

